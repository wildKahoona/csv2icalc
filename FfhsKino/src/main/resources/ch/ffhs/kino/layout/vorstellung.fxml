				<ImageView pickOnBounds="true" preserveRatio="true" />
				<Label text="meine Plätze" />
				<ImageView pickOnBounds="true" preserveRatio="true" />
			</children>
		</HBox>
		<HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
			<children>
				<GridPane>

					<children>
						<Button mnemonicParsing="false" text="Kaufen" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />

						<Label text="Buchungsvorgang läuft ab in 08:35 " GridPane.rowIndex="1" />
						<Label text="Total : 50.00CHF" GridPane.columnIndex="1" GridPane.rowIndex="1" />
					</children>
				</GridPane>
			</children>
		</HBox>
		<TableView fx:id="vorstellungTable" GridPane.columnIndex="1" GridPane.rowIndex="3" />

		<Button mnemonicParsing="false" text="Ticket hinzufügen" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4"
			GridPane.valignment="TOP" />
	</children>
</GridPane>
