<?import javafx.scene.layout.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
	xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="ch.ffhs.kino.controller.VorstellungController">

	<children>
		<Label text="Vorstellung" />
		<Label text="[Platzhalter]" GridPane.columnIndex="1" />
		<Separator GridPane.columnSpan="2" GridPane.rowIndex="1" />
		<TableView fx:id="kinoSaal" styleClass="kinoSaal" GridPane.rowIndex="3">

		</TableView>
		<Label text="Bitte wählen Sie Ihre Plätze im Saalplan aus:" GridPane.rowIndex="2" />
		<HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="4">
			<children>
				<ImageView pickOnBounds="true" preserveRatio="true" />
				<Label text="frei" />
				<ImageView pickOnBounds="true" preserveRatio="true" />
				<Label text="belegt" />
				<ImageView pickOnBounds="true" preserveRatio="true" />
